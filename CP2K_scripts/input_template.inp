&GLOBAL
  PROJECT ##JOBNAME##
  RUN_TYPE ##RUNTYPE##
&END GLOBAL

&MOTION
  &CELL_OPT
	EXTERNAL_PRESSURE 0
    OPTIMIZER LBFGS
	KEEP_SYMMETRY
	RMS_DR 1.5000E-03
	MAX_DR 3.0000E-03
	RMS_FORCE 6.0000E-04
	MAX_FORCE 8.0000E-04
    PRESSURE_TOLERANCE 10000
    &LBFGS
        MAX_F_PER_ITER 20
        MAX_H_RANK 5
        TRUST_RADIUS -1
        WANTED_REL_F_ERROR 1e-7
        WANTED_PROJ_GRADIENT 1e-8
    &END LBFGS
	&PRINT
		&PROGRAM_RUN_INFO MEDIUM
		&END PROGRAM_RUN_INFO
		&CELL MEDIUM
		&END CELL
	&END PRINT
  &END CELL_OPT
  &GEO_OPT
	TYPE MINIMIZATION
	OPTIMIZER LBFGS
	MAX_ITER 100
	MAX_DR 1.5000E-03
	RMS_DR 3.0000E-03
	MAX_FORCE 4.5000E-04
	RMS_FORCE 3.0000E-04
	&PRINT
		&PROGRAM_RUN_INFO MEDIUM
		&END PROGRAM_RUN_INFO
	&END PRINT
    &LBFGS
        MAX_F_PER_ITER 20
        MAX_H_RANK 5
        TRUST_RADIUS -1
        WANTED_REL_F_ERROR 1e-7
    &END LBFGS
  &END GEO_OPT
##CONSTRAINT##
&END MOTION

&FORCE_EVAL
  METHOD QS
  STRESS_TENSOR ##STRESSTENSOR##
  &DFT
    &PRINT
        &E_DENSITY_CUBE
            STRIDE 1 1 1
        &END E_DENSITY_CUBE
    &END PRINT
    BASIS_SET_FILE_NAME BASIS_pob
    POTENTIAL_FILE_NAME ##ALL_POTENTIAL_FILE##
    &MGRID
		CUTOFF ##CUTOFF##
		REL_CUTOFF 60
    &END MGRID
    &QS
		EPS_DEFAULT ##EPSDEFAULT##
		EPS_PGF_ORB ##EPSPGFORB##
		METHOD  GAPW
		EXTRAPOLATION USE_GUESS
    &END QS
    &SCF
		SCF_GUESS RESTART
		MAX_SCF    100
		EPS_SCF    ##EPSSCF##
##BRODEN##
    &END SCF
##XCFUNC##
##KPOINTS##
##RELATIVISTIC##
    &POISSON
		PERIODIC XYZ
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC ##ABCPAR##
      ALPHA_BETA_GAMMA ##ANGLES##
      SYMMETRY ##SYMS##
      MULTIPLE_UNIT_CELL ##REPA## ##REPB## ##REPC##
      PERIODIC XYZ
    &END CELL
    &COORD
		SCALED
##COORDS##
    &END COORD
    &TOPOLOGY
      MULTIPLE_UNIT_CELL ##REPA## ##REPB## ##REPC##
    &END TOPOLOGY
##BASISSET##
  &END SUBSYS
&END FORCE_EVAL